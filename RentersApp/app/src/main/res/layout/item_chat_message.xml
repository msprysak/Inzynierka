<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/left_chat_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:id="@+id/left_message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded"
        android:backgroundTint="?attr/colorTertiaryContainer"
        android:layout_marginEnd="80dp"
        android:padding="8dp"
        android:layout_toEndOf="@id/left_chat_profile_image"
        android:layout_below="@id/left_chat_username_text"
        >

        <TextView
            android:id="@+id/left_chat_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            />

    </LinearLayout>

        <ImageView
            android:id="@+id/left_chat_profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="5dp"
            android:layout_below="@id/left_chat_username_text" />
    <TextView

        android:id="@+id/left_chat_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/left_message_container"
        android:layout_marginStart="10dp"
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_chat_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:id="@+id/right_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_rounded"
            android:backgroundTint="?attr/colorPrimaryContainer"
            android:layout_marginStart="80dp"
            android:padding="8dp"
            android:layout_toStartOf="@id/right_chat_profile_image"
            android:layout_below="@id/right_chat_username_text"
            >

            <TextView
                android:id="@+id/right_chat_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/right_chat_profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/right_chat_username_text"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_centerInParent="true" />
        <TextView

            android:id="@+id/right_chat_username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/right_message_container"
            android:layout_marginEnd="10dp"
            />
    </RelativeLayout>

</RelativeLayout>