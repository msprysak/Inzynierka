<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.media.FullMediaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_full_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/media_creation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="14.11.2023"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/media_creation_date_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/creation_date"
            android:layout_marginEnd="5dp"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/media_creation_date"
            app:layout_constraintTop_toTopOf="@id/media_creation_date"
            app:layout_constraintBottom_toBottomOf="@id/media_creation_date"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/media_creation_date">

            <ImageView
                android:id="@+id/reporter_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_person"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/reporter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="@string/reporter"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/reporter_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/reporter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Właściciel"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/reporter_image"
                app:layout_constraintTop_toBottomOf="@id/reporter_text" />

            <TextView
                android:id="@+id/reporter_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/phone_number"
                android:visibility="gone"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/reporter_name"
                app:layout_constraintStart_toStartOf="@id/reporter_name"
                app:layout_constraintTop_toBottomOf="@id/reporter_name" />
            <TextView
                android:id="@+id/photo_taken_date_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/date_photos_were_taken"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@id/photo_taken_date"
                app:layout_constraintStart_toEndOf="@id/reporter_image"
                app:layout_constraintTop_toBottomOf="@id/reporter_phone_number"
                />
            <TextView
                android:id="@+id/photo_taken_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14.11.2023"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/photo_taken_date_static"
                app:layout_constraintBottom_toBottomOf="@id/photo_taken_date_static"
                app:layout_constraintStart_toEndOf="@id/photo_taken_date_static"
                android:layout_marginEnd="10dp"

                />
            <TextView
                android:id="@+id/media_title_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/photo_taken_date_static"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />
            <TextView
                android:id="@+id/media_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/media_title_static"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/images_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_info_container"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_info_container"
            tools:ignore="SpeakableTextPresentCheck"
            tools:itemCount="1"
            tools:listitem="@layout/item_report_image" />

        <Button
            android:id="@+id/delete_report_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:enabled="true"
            android:text="@string/delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/images_recycler_view"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>