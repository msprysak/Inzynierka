<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:contentDescription="@string/Add_home_photo"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_person"
        app:cornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImage"

        />

    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/profileImage"
        app:layout_constraintEnd_toEndOf="@id/profileImage"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:text="@string/edit_profile"

        />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editProfileButton">


            <androidx.cardview.widget.CardView
                android:id="@+id/add_home_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/add_home_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:drawablePadding="@dimen/menu_drawable_padding"
                    android:text="@string/add_new_home"
                    android:textSize="@dimen/menu_item_text_size"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/ic_add_home" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/add_user_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_space"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/addUsersTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:drawablePadding="@dimen/menu_drawable_padding"
                    android:text="@string/add_users"
                    android:textSize="@dimen/menu_item_text_size"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/ic_group_add" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/edit_home_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_space"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/editHomeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:drawablePadding="@dimen/menu_drawable_padding"
                    android:text="@string/edit_home"
                    android:textSize="@dimen/menu_item_text_size"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/ic_home" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/users_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_space"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/usersTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:drawablePadding="@dimen/menu_drawable_padding"
                    android:text="@string/users"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/ic_group" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/calendarTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/menu_item_margin"
                android:drawablePadding="@dimen/menu_drawable_padding"
                android:text="@string/calendar"
                android:textSize="20sp"
                android:textStyle="bold"
app:drawableLeftCompat="@drawable/ic_calendar" />

            <androidx.cardview.widget.CardView
                android:id="@+id/reports_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_space"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/reportsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:drawablePadding="@dimen/menu_drawable_padding"
                    android:text="@string/reports"
                    android:textSize="@dimen/menu_item_text_size"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/ic_report"

                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/invoices_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_space"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/invoices_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawablePadding="@dimen/menu_drawable_padding"
                android:text="@string/invoices"
                android:textSize="@dimen/menu_item_text_size"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_file" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/media_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/media_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/media"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableLeftCompat="@drawable/ic_perm_media"
                    android:drawablePadding="10dp"
                    android:layout_margin="5dp"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/contracts_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/contractsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawablePadding="@dimen/menu_drawable_padding"

                android:text="@string/umowy"
                android:textSize="@dimen/menu_item_text_size"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_file"
                />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    </ScrollView>

