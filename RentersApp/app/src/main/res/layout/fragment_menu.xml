<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.MenuFragment">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:clickable="false"
        android:contentDescription="@string/Add_home_photo"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_person"
        app:cornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImage"

        />

    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/profileImage"
        app:layout_constraintEnd_toEndOf="@id/profileImage"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:text="@string/editProfile"

        />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editProfileButton">

        <TextView
            android:id="@+id/addUsersTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_item_margin"
            android:text="@string/addUsers"
            android:textSize="@dimen/menu_item_text_size"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_group_add"
            android:drawablePadding="@dimen/menu_drawable_padding"/>
        <TextView
            android:id="@+id/editHomeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_home"
            android:layout_marginTop="@dimen/menu_item_margin"
            android:textSize="@dimen/menu_item_text_size"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_home"
            android:drawablePadding="@dimen/menu_drawable_padding"
            />


        <TextView
            android:id="@+id/tenantsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tenants"
            android:textSize="20sp"
            android:layout_marginTop="@dimen/menu_item_margin"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_group"
            android:drawablePadding="@dimen/menu_drawable_padding"
            />
        <TextView
            android:id="@+id/calendarTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calendar"
            android:textSize="20sp"
            android:layout_marginTop="@dimen/menu_item_margin"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_calendar"
android:drawablePadding="@dimen/menu_drawable_padding"
            />
        <TextView
            android:id="@+id/reportsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reports"
            android:layout_marginTop="@dimen/menu_item_margin"
            android:textSize="@dimen/menu_item_text_size"
            android:textStyle="bold"
            android:drawablePadding="@dimen/menu_drawable_padding"
            app:drawableLeftCompat="@drawable/ic_report"

            />
        <TextView
            android:id="@+id/invoicesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/invoices"
            android:layout_marginTop="@dimen/menu_item_margin"
            android:textSize="@dimen/menu_item_text_size"
            android:textStyle="bold"
            android:drawablePadding="@dimen/menu_drawable_padding"
            app:drawableLeftCompat="@drawable/ic_file" />

        <TextView
            android:id="@+id/contractsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/umowy"
            android:layout_marginTop="@dimen/menu_item_margin"
            android:textSize="@dimen/menu_item_text_size"
            android:textStyle="bold"
            android:drawablePadding="@dimen/menu_drawable_padding"
            app:drawableLeftCompat="@drawable/ic_file" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>